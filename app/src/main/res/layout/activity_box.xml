<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.delcourt.samuel.accio.BoxActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/entete_liste_aliments"
        >
        <ImageView
            android:id="@+id/imgTypeBoite_boxActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10px"
            />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10px"
            android:layout_weight="1"
            >

            <TextView android:id="@+id/boxName_BoxActivity"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textSize="28px"
                android:textStyle="bold"
                />

            <TextView android:id="@+id/frigoName_BoxActivity"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                />

        </LinearLayout>

     </LinearLayout>


    <ListView
        android:id="@+id/liste_aliments"
        android:dividerHeight="0.1dp"
        android:divider="#0000CC"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="70dp"
        android:layout_above="@+id/options_box"
     >
    </ListView>

    <TextView android:id="@+id/message_BoxActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="20dp" />

    <TextView android:id="@+id/resultat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="20dp"
        android:text="Chargement ..."/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Options"
        android:id="@+id/options_box"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        android:onClick="sendMessageOptionsBox"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualiser"
        android:id="@+id/actualise_box"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        android:onClick="sendMessageActualiseBox"/>


</RelativeLayout>
