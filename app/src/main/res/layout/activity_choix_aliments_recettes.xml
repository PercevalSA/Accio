<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.delcourt.samuel.accio.recettes.ChoixAlimentsRecettes">

    <TextView
        android:id="@+id/message_recette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>


    <TextView android:text="Choisissez les aliments Ã  partir desquels vous souhaitez effectuer la recherche de recettes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/FontNormal"
        android:textIsSelectable="false"
        android:id="@+id/text_choix_aliments"
        android:layout_marginTop="12dp" />


    <ListView
        android:id="@+id/listeAlimentsProposes"
        style="@style/ListTheme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text_choix_aliments"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/edit_text_recette">
    </ListView>

    <EditText
        android:id="@+id/edit_text_recette"
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Autres aliments"
        android:layout_above="@+id/bouton_ok_recette"
        style="@style/FontNormal"
        />

    <Button
        android:id="@+id/bouton_ok_recette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chercher"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>


    <TextView
        android:id="@+id/message_chargement_recettes"
        android:textAlignment="center"
        android:textColor="#ff000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>
