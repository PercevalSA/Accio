<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.delcourt.samuel.accio.create_new_object_activities.NewBoxActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/numero_boite"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="@string/numero_boite"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/code_activation_boite"
        android:layout_below="@+id/numero_boite"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="@string/code_boite"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_boite"
        android:hint="@string/nom_boite"
        android:layout_below="@+id/code_activation_boite"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="@string/type_boite"
        android:id="@+id/text_type_compartiment"
        android:layout_below="@+id/name_boite"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/text_type_compartiment"
        android:layout_above="@+id/buttonCreateBox">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal" android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgNewBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="10px"
                    />

                <CheckBox android:layout_height="wrap_content"
                    android:id="@+id/checkNewBox1"
                    android:layout_width="fill_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="10sp"
                    android:layout_alignParentLeft="true"
                    android:textSize="15sp"
                    android:onClick="selectedBox1"


                    />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal" android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgNewBox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="10px"
                    />

                <CheckBox android:layout_height="wrap_content"
                    android:id="@+id/checkNewBox2"
                    android:layout_width="fill_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="10sp"
                    android:layout_alignParentLeft="true"
                    android:textSize="15sp"
                    android:onClick="selectedBox2"
                    style="@style/CustomCheckBox"

                    />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal" android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgNewBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="10px"
                    />

                <CheckBox android:layout_height="wrap_content"
                    android:id="@+id/checkNewBox3"
                    android:layout_width="fill_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="10sp"
                    android:layout_alignParentLeft="true"
                    android:textSize="15sp"
                    android:onClick="selectedBox3"

                    />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal" android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgNewBox4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="10px"
                    />

                <CheckBox android:layout_height="wrap_content"
                    android:id="@+id/checkNewBox4"
                    android:layout_width="fill_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="10sp"
                    android:layout_alignParentLeft="true"
                    android:textSize="15sp"
                    android:onClick="selectedBox4"

                    />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal" android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgNewBox5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="10px"
                    />

                <CheckBox android:layout_height="wrap_content"
                    android:id="@+id/checkNewBox5"
                    android:layout_width="fill_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="10sp"
                    android:layout_alignParentLeft="true"
                    android:textSize="15sp"
                    android:onClick="selectedBox5"

                    />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal" android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgNewBox6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="10px"
                    />

                <CheckBox android:layout_height="wrap_content"
                    android:id="@+id/checkNewBox6"
                    android:layout_width="fill_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="10sp"
                    android:layout_alignParentLeft="true"
                    android:textSize="15sp"
                    android:onClick="selectedBox6"

                    />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_frigo_create"
        android:id="@+id/buttonCreateBox"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>



    <TextView
        android:id="@+id/message_new_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>
