<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.delcourt.samuel.accio.recettes.RecetteEnregistreeActivity">

    <TextView
        android:id="@+id/message_chargement_marmiton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chargement ..."
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="20dp" />

    <WebView
        android:id="@+id/marmiton_web_view_favori"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bouton_options_recette"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bouton_options_recette"
        android:text="Options"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:onClick="sendMessageOptionsRecette"/>

</RelativeLayout>
