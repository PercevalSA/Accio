<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.delcourt.samuel.accio.options_activities.FrigoOptionsActivity">

    <TextView
        android:id="@+id/text_renommer_frigo"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pour renommer le frigo, entrez le nouveau nom ci-dessous"/>
    <EditText
        android:id="@+id/edit_text_renommer_frigo"
        android:layout_below="@+id/text_renommer_frigo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Nouveau nom"/>
    <Button
        android:id="@+id/bouton_renommer_frigo"
        android:layout_below="@+id/edit_text_renommer_frigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Renommer"/>



</RelativeLayout>
