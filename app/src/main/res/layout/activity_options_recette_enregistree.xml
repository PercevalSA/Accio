<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.delcourt.samuel.accio.recettes.OptionsRecetteEnregistreeActivity">

    <TextView
        android:id="@+id/text_renommer_recette"
        android:layout_below="@+id/entete_options_boite"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pour renommer la recette, entrez le nouveau nom ci-dessous"/>

    <EditText
        android:id="@+id/edit_text_renommer_recette"
        android:layout_below="@+id/text_renommer_recette"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Nom"/>

    <Button
        android:id="@+id/bouton_renommer_recette"
        android:layout_below="@+id/edit_text_renommer_recette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Renommer"
        android:onClick="sendMessageRename"/>

    <Button
        android:id="@+id/bouton_supprimer_recette"
        android:layout_below="@+id/bouton_renommer_recette"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Supprimer"
        android:onClick="sendMessageDelete"/>

</RelativeLayout>
